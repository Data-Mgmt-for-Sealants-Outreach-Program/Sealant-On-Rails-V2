<!doctype html>
<html lang="en">
  <head>
    <title>SealantOnRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= javascript_importmap_tags %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>

  <div class="horizontal-menu">
    <div style="display: inline-block;">
      <%= button_to "Home", root_path, method: :get,
                    class: "button" %>
    </div>
    <div style="display: inline-block;">
      <%= button_to "Event Details", event_details_path, method: :get,
                    class: "button" %>
    </div>
    <div style="display: inline-block;">
      <%= button_to "Patients Details", patient_details_path, method: :get,
                    class: "button" %>
    </div>
    <div style="display: inline-block;">
      <%= button_to "Add Patient", new_patient_detail_path, method: :get,
                    class: "button" %>
    </div>
    <div style="display: inline-block;">
      <%= button_to "Logout", logout_path, method: :delete,
                    class: "button" %>
    </div>
  </div>

  <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>