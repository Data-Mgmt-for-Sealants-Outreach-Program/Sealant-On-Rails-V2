
<div id = "<%= dom_id patient_detail %>">
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Patient id</th>
        <th>Program Name</th>
        <th>School Name</th>
        <th>Age</th>
        <th>Date</th>
        <th>Insurance</th>
        <th>Grade</th>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
    
    <tr>
      <td>
      <%= link_to patient_detail.id, patient_detail %>

      </td>
      <td><%= patient_detail.ProgramName %></td>
      <td><%= patient_detail.SchoolName %></td>
      <td><%= patient_detail.Age %></td>
      <td><%= patient_detail.Date %></td>
      <td><%= patient_detail.Insurance %></td>
      <td><%= patient_detail.Grade %></td>
      <td><button type="button" class="Screening" id="screeningButton">Screening</button></td>
      <td><button type="button" class="PreventiveServices" id="preventiveservicesButton">Preventive Services</button></td>
      <td><button type="button" class="FollowUp" id="FollowUpButton">Follow Up</button></td>
      <td><%= button_to "Destroy this patients detail", patient_detail, method: :delete %></td>      
    </tr>
    </tbody>

</table>
    </div>

  <script>

  // Add a click event listener to the "Next" button
  screeningButton.addEventListener('click', function() {
    // Redirect to the screening.html.erb page
    window.location.href = '/screening';
  });
    // Add a click event listener to the "Next" button
  preventiveservicesButton.addEventListener('click', function() {
    // Redirect to the screening.html.erb page
    window.location.href = '/preventive_services';
  });
    // Add a click event listener to the "Next" button
  FollowUpButton.addEventListener('click', function() {
    // Redirect to the screening.html.erb page
    window.location.href = '/followup';
  });
</script>
